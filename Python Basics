PYTHON BASICS

print ('Nauman Rasheed')

 #Variable assignment (used to store information) 
 #variable increase reproducible
a= 8+10
print (a)

b=50-40
print (b)

c=10*50
print (c)

d= 100/5
print (d)

#remainder
print (10%3)

#when decimals are not required and value in integer
print (int(10/3))
print (10//3)

#string functions

first_name = "Nauman"
last_name = "Rasheed"

print (first_name + " " + last_name)

#string fuction

string1= " python is fun! "

#indexing #follows 0 base indexing
#index based slicing

print (string1[0:4])
print (string1[2:])
print (string1[:12])

#reverse indexing
print(string1[:-3])
print(string1[:-1])


#upper,lower,strip(to eliminate leading and trailing spaces only),title

print(string1.upper())
print(string1.lower())
string2=string1.strip()
string2=string1.title()
print(string2)

#replace 

string3=string1.replace("fun","cool")
print(string3)

#fstring
age = 27
print(f"My first_name is {first_name} and my {age} is ")

#datatypes 
#1-list (way to store multiple information in single variable)

country_list= ["pakistan","India","China","USA","KSA"]
print(country_list[-5])

#append(enters values on last)
country_list.append("Qatar")
print(country_list)
#insert ("where you want to index","what you want to insert")
country_list.insert(0,"Qatar")
print(country_list)
#pop to delete values by indexing

country_list.pop(-1)
print(country_list)

#remove to delete the string
country_list.remove("India")
print(country_list)

#for LOOP (iterations, for every object print)
# Qatar
# Pakistan
# China
# USA
# KSa

for item in country_list:
    print(item)

for number in range(10):
    print(number+10)

for multiply in range(15):
    print(multiply*5)

#if-else (conditional statements)

e=10
if e < 100:
    print("less than hundred")
else: 
    print("greater than hundred")

#custom function creation
def adding_number(a,b):
    print(a+b)
#calling a function    
adding_number(10,20)

#custom function creation
def divide_no(c,d):
    print (d/c)
#calling function
divide_no (1000,500)
